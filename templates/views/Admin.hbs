<body>

    <!-- First Layer -->
    <section class="FirstLayer">
        <div class="container">
            <div class="row FirstLayerFirstRow">
               <div class="col col-lg-3 col-sm-6 col-md-6">
                <img src="../../images/logo.png" class="img-fluid" alt="Logo_Img">
               </div>
            </div>

            <div class="row ADMINHEAD">
                <h1 style="text-align: center;">ADMIN MOVIE ADDING PAGE</h1>
            </div>
        </div>
    </section>



    <hr>
    
    <div class="container">
        <div class="row">
            <div class="col col-sm-12 col-md-12 col-lg-12 FormHolder">

                <form action="/MyAdmin" method="POST">

                    <label for="Movie">Movie Name : </label><br>
                    <input type="text" name="moviename" placeholder="Enter The Movie Name"><br>
    <hr>
                    
                    <label for="img">Upload Main Image : </label><br>
                    <input type="file" name="movieimg" placeholder="Enter The Image"><br>
    <hr>
                    
                    <label for="Category">Category : </label><br>
                    <input type="text" name="category" placeholder="Enter The Category"><br>
    <hr>
                    
                    <label for="StarCast">StarCast : </label><br>
                    <input type="text" name="starcast" placeholder="Enter The StarCast"><br>
    <hr>
                    
                    <label for="Genere">Genere : </label><br>
                    <input type="text" name="genere" placeholder="Enter The Genere"><br>
    <hr>
                    
                    <label for="Release">Release Date : </label><br>
                    <input type="date" name="releasedate" placeholder="Enter Release Date"><br>
                    
    <hr>
                    
                    <label for="Duration">Duration : </label><br>
                    <input type="time" name="duration" placeholder="Enter The Duration"><br>
    <hr>

                       
                    <label for="Quality">Quality : </label><br>
                    <input type="text" name="quality" placeholder="Enter The Quality"><br>
                    

    <hr>
                      
                    <label for="Desc">Desc : </label><br>
                    <input type="text" name="desc" placeholder="Enter The Desc"><br>
    <hr>
                    
                    <label for="images">Upload Thumbnail 4 Images : </label><br>
                    <input type="file" name="thumbnails" placeholder="Enter The 4 Images"><br>
    <hr>
                       
                    <label for="LatestMovies">Download Link 1 Latest Movies : </label><br>
                    <input type="text" name="linkOne" placeholder="Enter The Link 👍"><br>
    <hr>

                         
                    <label for="halfHd">Download Link 2 (480p) </label><br>
                    <input type="text" name="linkTwo" placeholder="Enter The Link 👍👍"><br>
    <hr>
                         
                    <label for="FullHd">Download Link 3 (7820p)</label><br>
                    <input type="text" name="linkThree" placeholder="Enter The Link 👍👍👍"><br>
    <hr>
                  <div class="button">
                                <button type="submit">Add Movie</button>
                </div>

    <hr>

                </form>


<br>
            </div>
        </div>
    </div>






    
